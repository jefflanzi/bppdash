extends ../chart

block chart  
  script
    include awareness.js
  script.
    $(document).ready( function() {
      var height = window.innerHeight - $('.navbar').height() - 40;          
      $('#chart').height(height);      
      awarenessChart(d3.select('#chart'));
      
      $(window).on('resize', function() {
        height = window.innerHeight - $('.navbar').height() - 40;
        $('#chart').height(height);        
      });
    });          



    
