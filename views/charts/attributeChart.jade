extends ../layout

block content  
  #chart.wrapper()
  script
    include attributeChart.js
  script.
    $(document).ready( function() {
      var height = window.innerHeight - $('.navbar').height() - 50;          
      $('#chart').height(height);      
      attributeChart(d3.select('#chart'));
      
      $(window).on('resize', function() {
        var height = window.innerHeight - $('.navbar').height() - 50;
        $('#chart').height(height);
      });
    });

    
