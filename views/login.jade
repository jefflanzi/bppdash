  body
    script.
      var width = window.innerWidth || document.documentElement.clientHeight;
      var height = window.innerHeight || document.documentElement.clientHeight;
      //- console.log(width);
      //- console.log(height);
      var body = d3.select('body')
        .style('background-color', '#222')
        .style('padding', '0');
      
      var chart = body.append('svg')
        .attr({
          width: width,
          height: height          
        })
        .style('border', 'none');        
      
      var size = 20
                    
      var xScale = d3.scale.ordinal()
        .domain(d3.range(Math.ceil(width / size)))
        .rangeRoundBands([0, width])
        
      var yScale = d3.scale.ordinal()
        .domain(d3.range(Math.ceil(height / size)))
        .rangeRoundBands([0, height])
      
      xs = d3.range(Math.ceil(width/size))
      ys = d3.range(Math.ceil(height/size))
      
      var ygroups = chart.selectAll('g')
        .data(ys)
        .enter()
        .append('g')
        .attr('transform', function(d, i ) {return 'translate(0, ' + i*20 + ')'});        
      
      ygroups.selectAll('rect')
        .data(xs)
        .enter()
        .append('rect')
        .attr('height', '20px')
        .attr('width', '20px')
        .attr('x', function(d, i) { return i * 20 })        
        .classed('loginRect', true);
      
