doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')        
  body
    .container
      h1 Setup Admin User
      p Warning: do not lose credentials, this process cannot be repeated
      br
      form(role='form', action='/admin/setup', method='post', style='max-width: 300px;')
        .form-group
          input.form-control(type='text', name='username', placeholder='Enter Username')        
        .form-group
          input.form-control(type='password', name='password', placeholder='Password')        
        button(type='submit') Submit
